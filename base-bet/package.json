{
  "name": "prediction-betting-bot",
  "version": "1.0.0",
  "description": "Twitter bot for crypto prediction betting using AgentKit and Base blockchain",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "deploy:contract": "ts-node src/contracts/deploy.ts",
    "deploy:real": "npx hardhat run scripts/deploy.ts --network base-sepolia",
    "deploy:mainnet": "npx hardhat run scripts/deploy.ts --network base-mainnet",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test"
  },
  "keywords": [
    "twitter",
    "bot",
    "prediction",
    "betting",
    "crypto",
    "agentkit",
    "base",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@coinbase/coinbase-sdk": "^0.0.15",
    "@coinbase/onchainkit": "^0.10.0",
    "dotenv": "^16.3.1",
    "openai": "^4.20.1",
    "twitter-api-v2": "^1.15.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.9",
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "@types/node": "^20.8.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.25.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
